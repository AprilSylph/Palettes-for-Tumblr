{
	"manifest_version": 2,
	"name": "Palettes for Tumblr",
	"version": "0.0.6",

	"description": "Colour scheme manager for Tumblr",
	"icons": {
    "48": "img/icon/48.png",
    "128": "img/icon/128.png"
  },

	"browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "img/icon/48.png",
      "128": "img/icon/128.png"
    },
		"default_popup": "src/browser_action/popup.html"
	},

  "content_scripts": [
    {
      "matches": [ "*://www.tumblr.com/*" ],
      "run_at": "document_end",
      "js": [
        "lib/browser-polyfill.min.js",
        "src/main.js"
      ],
      "css": [
        "src/peepr_shadow.css"
      ]
    }
  ],
	"homepage_url": "https://github.com/AprilSylph/Tumblr-Palettes",
  "permissions": [ "storage", "*://www.tumblr.com/*" ],
  "web_accessible_resources": [ "src/palettes.json", "src/stylesheets/*.css" ],

	"minimum_chrome_version": "38",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "59.0a2"
    }
  }
}
